<!DOCTYPE html>
<html>
  <head>
    <title>Hotdealsfinda</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= stylesheet_link_tag "#{action_name}/above_fold" %>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async="async" src="https://www.googletagmanager.com/gtag/js?id=UA-145677058-1"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag('js', new Date());
      gtag('config', 'UA-145677058-1');
    </script>
  </head>
  <body>
    <%= yield %>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <%= javascript_include_tag 'application' %>
    <% path = "#{action_name}/below_fold" %>
    <% if asset_exists?(path) %>
      <%= stylesheet_link_tag path %>
    <% end %>
    <%= stylesheet_link_tag 'below_fold' %>
  </body>
</html>
