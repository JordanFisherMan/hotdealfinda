<%= form_tag(results_path, method: 'get', class: 'search-form') do %>
<%= text_field_tag 'search', params[:search] || nil, class:'search-form__text-field', placeholder: "Search for deals ..." %>
<div class="search-form__locations-and-submit">
  <div class="search-form__primary">
    <div class="locations">
      <select name="" id="" class="locations__select">
        <option value="">New Zealand</option>
        <option value="">Australia</option>
      </select>
      <svg class="locations__drop-down-arrow" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512"><path fill="currentColor" d="M31.3 192h257.3c17.8 0 26.7 21.5 14.1 34.1L174.1 354.8c-7.8 7.8-20.5 7.8-28.3 0L17.2 226.1C4.6 213.5 13.5 192 31.3 192z"/></svg>
    </div>
  </div>
  <div class="search-form__secondary">
    <%= button_tag(type:'submit',class:'search-form__submit',name:'') do %>
    <svg class="search-form__magnifying-glass" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path fill="currentColor" d="M505 442.7L405.3 343c-4.5-4.5-10.6-7-17-7H372c27.6-35.3 44-79.7 44-128C416 93.1 322.9 0 208 0S0 93.1 0 208s93.1 208 208 208c48.3 0 92.7-16.4 128-44v16.3c0 6.4 2.5 12.5 7 17l99.7 99.7c9.4 9.4 24.6 9.4 33.9 0l28.3-28.3c9.4-9.4 9.4-24.6.1-34zM208 336c-70.7 0-128-57.2-128-128 0-70.7 57.2-128 128-128 70.7 0 128 57.2 128 128 0 70.7-57.2 128-128 128z"/></svg>
    <%= content_tag(:strong,'Search') %>
  <% end %>
  </div>
</div>
<% end %>
