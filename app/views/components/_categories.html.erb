<ul class="categories">
  <% @categories.each do |category| %>
    <li class="categories__list-item">
      <% active = category.slug == @category.slug ? 'active' : '' %>
      <%= link_to category.slug, root_path(category: category.slug), class: "categories__category #{active}" %>
    </li>
  <% end %>
</ul>
