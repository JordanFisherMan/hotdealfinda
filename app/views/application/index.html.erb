<div class="index__logo-bar">
  <%= render 'components/logo_bar' %>
</div>
<%= render 'components/hero/heading' %>
<div class="container">
  <%= render 'components/categories' %>
</div>
<hr>
<section class="index__deals">
  <div class="container">
    <div class="row">
      <% i = 0 %>
      <% @deals.each do |deal| %>
      <% if i == 15 %>
        <div class="index__deal">
          <%= render 'components/ad' %>
        </div>
        <% i = 0 %>
      <% else %>
        <div class="index__deal">
          <%= render 'components/deal', deal: deal %>
        </div>
        <% i += 1 %>
      <% end %>
        <% end %>
        <div class="index__pagination">
          <%= will_paginate @deals %>
        </div>
      </div>
    </div>
  </section>
  <hr class="gradient">
  <%= render 'components/footer' %>
